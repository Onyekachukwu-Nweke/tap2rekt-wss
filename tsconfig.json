{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015", // or higher
    "module": "commonjs", // or "esnext" if you use ESM, but "commonjs" is safer for Node on Render
    "downlevelIteration": true, // fixes Set<string> error
    "outDir": "./dist"
  }
}